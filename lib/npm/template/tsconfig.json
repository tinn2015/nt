{
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "strict": true,
      "module": "esnext",
      "moduleResolution": "node",
      "target": "ES5",
      "lib": ["es2015", "dom"],
      "declaration": false,
      "outDir": "./dist",
      "stripInternal": true,
      "allowJs": true,   
  },
  "include": [
    "src/",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
